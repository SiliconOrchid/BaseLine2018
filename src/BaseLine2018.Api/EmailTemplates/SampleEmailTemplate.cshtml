@*@inherits BaseLine2018.Email.RazorEngine.RazorEngineBaseTemplate<BaseLine2018.Api.EmailTemplates.SampleEmailTemplateModel>
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>@(Model.EmailHeader)</title>
    <style>
        table {
            font-size: 1em;
        }

            table table {
                font-size: 1em;
            }

            table th, table strong {
                font-size: 1.1em;
            }

        .container {
            width: 100%;
            max-width: 800px;
            margin: auto;
            font-family: Arial, sans-serif;
        }

        h1 {
            font-size: 2em;
        }

        p {
            font-size: 1em;
        }

        .clear {
            width: 100%;
            display: block;
            clear: both;
            height: 1px;
        }

        table.border {
            border: 1px solid black;
        }

            table.border td {
                border: 1px solid black;
            }

        table.outer-border {
            border: 1px solid black;
        }

            table.outer-border th {
                background: #ada7c3;
                text-align: left;
            }

        table.inner-border td {
            border-right: 1px solid black;
        }

        table.inner-border th {
            border-bottom: 1px solid black;
            border-right: 1px solid black;
            background: white;
        }

            table.inner-border td:last-child, table.inner-border th:last-child {
                border-right: none;
            }

        table.left {
            width: 48%;
            float: left;
        }

        table.right {
            width: 48%;
            float: right;
        }

        ol li, ul li {
            margin-bottom: 10px;
        }

        ol.alpha {
            list-style-type: lower-alpha;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="clear"></div>
        <br>



        <table width="100%" border="0" cellspacing="0" cellpadding="5">
            <tbody>
                <tr>
                    <td>
                        <h1>@(Model.EmailHeader)</h1>
                    </td>
                </tr>
            </tbody>
        </table>

        <table width="100%" border="0" cellspacing="0" cellpadding="5">
            <tbody>
                @foreach (var item in Model.ListCollectionItems)
                {
                    <tr>
                        <td>
                            <p>Description:</p>
                            <br>
                            <p>@item.CollectionItemDescription</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>
</html>*@
